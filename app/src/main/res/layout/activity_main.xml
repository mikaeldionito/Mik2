<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bkg"
        tools:context=".MainActivity">


    <ImageView
            android:paddingTop="100dp"
            android:layout_width="1000dp"
            android:layout_height="300dp"
            app:srcCompat="@drawable/pic1"
            android:id="@+id/imageView"/>
    <TextView
            android:text="Mikael Dionito Harbigantara"
            android:paddingTop="20dp"
            android:layout_below="@id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:layout_centerHorizontal="true" android:fontFamily="serif" android:textStyle="bold"
            android:textSize="24sp" android:typeface="sans" android:textColor="@android:color/background_dark"/>
    <TextView
            android:text="165410102"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:layout_below="@id/textView"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:textAlignment="textStart" android:textColor="@android:color/background_dark"
            android:fontFamily="serif" android:textSize="18sp"/>
</RelativeLayout>